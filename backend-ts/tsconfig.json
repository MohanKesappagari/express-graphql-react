{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": ["./node_modules/*", "src/types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./typings"],
    "types": ["node"]
  },
  "rules": {
    "indent": [true, "spaces", 4]
  }
}
